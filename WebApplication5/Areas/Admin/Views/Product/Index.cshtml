
@model IEnumerable<WebApplication5.Models.Product>
@{
    ViewData["Title"] = "Product";
}

<br />  <br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Products List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info">Create</a>
    </div>
</div>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Price)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Avaiable)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.SpecialTag)
            </th>
            <th></th>
            <td></td>
        </tr>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Price)
            </td>
            <td>
                @Html.DisplayFor(m => item.Avaiable)
            </td>
            <td>
                @Html.DisplayFor(m => item.ProductType.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.SpecialTag.Name)
            </td>
            <td>
                <partial name="_TableButtonPartial" model="item.Id" />
            </td>
        </tr>
        }
    </table>
</div>

