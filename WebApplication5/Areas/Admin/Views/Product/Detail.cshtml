@model WebApplication5.Models.ViewModels.ProductViewModel
@using WebApplication5.Extensions
@{
    ViewData["Title"] = "Detail";
}

<br />
<h2 class="text-info">Detail Product</h2>

<div class="p-4 border rounded row">
    <div class="col-8">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Product.Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Product.Name" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Product.Price"></label>
            </div>
            <div class="col-8">
                <input asp-for="Product.Price" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="ProductTypes"></label>
            </div>
            <div class="col-8">
                <input asp-for="Product.ProductType.Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="SpecialTags"></label>
            </div>
            <div class="col-8">
                <input asp-for="Product.SpecialTag.Name" readonly class="form-control"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Product.ShadeColor"></label>
            </div>
            <div class="col-8">
                <input asp-for="Product.ShadeColor" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Product.Avaiable"></label>
            </div>
            <div class="col-8">
                <input type="checkbox" disabled asp-for="Product.Avaiable" />
            </div>
        </div>
    </div>
    <div class="col-1">
    </div>
    <div class="col-3">
        <img src="@Model.Product.Image" width="100%" style="border-radius:5px; border:1px solid #bbb9b9;" />
    </div>
    <br />
    <div class="form-group">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Product.Id">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</div>