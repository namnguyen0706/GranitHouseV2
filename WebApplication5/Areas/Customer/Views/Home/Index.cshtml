@model List<WebApplication5.Models.Product>

<br /><br />

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px; color: steelblue">@product.Name</label>
                    </h4>
                </div>
                <img class="card-img-top" style="height:250px" src="@product.Image" alt="Card Image" />
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:20px; color:#a51313;"><b>$@product.Price</b></label>
                        </div>
                        <a asp-action="Detail" asp-controller="Home" class="btn btn-outline-info" asp-route-id="@product.Id">View Detail</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

